<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_basic"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="RxJava的基础使用" />

    <Button
        android:id="@+id/button_create_operator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="RxJava的最基础的操作符的介绍" />

    <Button
        android:id="@+id/button_network"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Rx网络请求轮询" />

    <Button
        android:id="@+id/button_change_operator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="RxJava变换操作符" />

    <Button
        android:id="@+id/button_network_nest"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="RxJava网络的嵌套" />

    <Button
        android:id="@+id/button_merge"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="RxJava组合 / 合并操作符" />

</LinearLayout>